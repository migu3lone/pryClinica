<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo cuando está seleccionado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Biselado: Esquinas redondeadas -->
            <corners android:radius="16dp" />
            <!-- Fondo interior -->
            <solid android:color="#495E68" />
            <!-- Borde -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Color del borde -->
        </shape>
    </item>

    <!-- Fondo cuando no está seleccionado -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#8135444C" />
            <stroke
                android:width="2dp"
                android:color="#B3FFFFFF" /> <!-- Borde transparente -->
        </shape>
    </item>
</selector>