<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addCita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cita.AddCitaFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etIdCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Cita"
                android:inputType="text" />

            <EditText
                android:id="@+id/etFK_Paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Paciente"
                android:inputType="text" />

            <EditText
                android:id="@+id/etFK_Especialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Especialidad"
                android:inputType="text" />

            <EditText
                android:id="@+id/etFK_Medico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Medico"
                android:inputType="text" />

            <EditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha"
                android:focusable="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/etHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hora"
                android:inputType="text" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
